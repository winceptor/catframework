<% if (typeof query == "undefined") { query = ""; } %>
<!-- messagebar -->

<form class="col-sm-12 form-horizontal vertical-spacing" method="get" action="/message">
	<div class="row">
		<div class="row">
			<div class="col-xs-12">
				<div class="input-group">
					<input type="text" class="form-control" name="q" value="<%= query || '' %>" placeholder="Message..." onFocus="this.select()" autofocus>

					<span class="input-group-btn">
						<button class="btn btn-primary" type="submit">Send</button>
					</span>
				
				</div>
			</div>
		</div>
	</div>
</form>
