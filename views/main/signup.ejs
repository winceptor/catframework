<% if (typeof profile == "undefined") { profile = false; } %>

<% layout('layout') -%>

<div class="container">

    <h1 class="title text-center"><span class="fa fa-user"></span> ###signup###</h1>

    <hr class="simple-divider">
	
    <!-- signup-form -->
	<form class="form-horizontal spacing" method="post">
			   
		<div class="row spacing">
			<label class="col-xs-12 text-muted small text-right">
				<strong><span class="required-sign">*</span> = ###required###</strong>
			</label>
		</div>
		<div class="row vertical-spacing">
			<label class="col-sm-push-2 col-sm-8 text-muted">
				<strong>###userinfo### ###public###</strong>
			</label>
		</div>
		<% if ( hasadmin ) { %>
			<div class="form-group">
				<label for="admin" class="col-sm-2 control-label">###admin###</label>
				<div class="col-sm-8">
					<label class="checkbox-inline" for="admin"><input name="admin" id="admin" type="checkbox" <% if (profile && profile.admin || zeroadmins) { %>checked="checked"<% } %><% if ( zeroadmins) { %>disabled<% } %>> (###admin### ###user###)</label>
				</div>
			</div>
		<% } %>
		
		<div class="form-group">
			<label for="name" class="col-sm-2 control-label"><span class="required-sign">*</span>###name###</label>
			<div class="col-sm-8">
				<input type="name" id="name" name="name" value="<% if (profile) { %><%= profile.local.name || "" %><% } %>" placeholder="###fullname###" class="form-control textarea">
			</div>
		</div>
		
		<div class="row vertical-spacing">
			<label class="col-sm-push-2 col-sm-8 text-muted">
				<strong>###logininfo###</strong>
			</label>
		</div>
		<div class="form-group">
			<label for="email" class="col-sm-2 control-label"><span class="required-sign">*</span>###email###</label>
			<div class="col-sm-8">
				<input type="email" id="email" name="email" value="<% if (profile) { %><%= profile.local.email || "" %><% } %>" placeholder="###emailplaceholder###" class="form-control textarea">
			</div>
			
		</div>
		<div class="form-group">
			<label for="password" class="col-sm-2 control-label"><span class="required-sign">*</span>###password###<% if (!profile) { %><% } %></label>
			<div class="col-sm-8">
				<input type="password" id="password" name="password" placeholder="###password###" class="form-control textarea">
			</div>
		</div>
		<div class="form-group">
			<label for="passwordcheck" class="col-sm-2 control-label"><span class="required-sign">*</span>###repeatpassword###<% if (!profile) { %><% } %></label>
			<div class="col-sm-8">
				<input type="password" id="passwordcheck" name="passwordcheck" placeholder="###password###" class="form-control textarea">
			</div>
		</div>	

			
		<div class="row vertical-spacing">
			<label class="col-sm-push-2 col-sm-8">
				<button type="submit" class="btn btn-warning btn-lg">###signup###</button>
			</label>
		</div>
			
	</form>
	 

</div>

</div>
